{
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "packageManager": "yarn@3.0.2",
  "scripts": {
    "build": "yarn workspaces foreach -tvp run build",
    "lint": "yarn workspaces foreach -tv run lint",
    "lint:fix": "yarn workspaces foreach -tv run lint:fix",
    "test:unit": "yarn workspaces foreach -tv run test:unit",
    "test:watch": "yarn workspaces foreach -tv run test:watch",
    "cm": "cz",
    "postinstall": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/eslint": "^7",
    "@types/is-ci": "^3",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.6.0",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "is-ci": "^3.0.0",
    "jest": "^27.2.2",
    "lint-staged": "^11.1.2",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn lint:fix"
    ]
  }
}
